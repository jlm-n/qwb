{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "correctness": {
        "noUnusedVariables": "error"
      },
      "suspicious": {
        "noReactSpecificProps": "off",
        "noExplicitAny": "error"
      },
      "style": {
        "useConst": "error",
        "useTemplate": "error",
        "useNamingConvention": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "indentWidth": 4,
    "lineWidth": 140,
    "ignore": []
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "indentStyle": "tab"
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  }
}